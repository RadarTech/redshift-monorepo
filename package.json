{
  "private": true,
  "scripts": {
    "build": "concurrently 'yarn build:cjs' 'yarn build:esm'",
    "build:cjs": "tsc -b packages/redshift-types packages/redshift-utils packages/htlc packages/redshift-api-client packages/redshift.js",
    "build:esm": "tsc -b packages/htlc/tsconfig.esm.json",
    "test": "lerna run test --stream --parallel",
    "lint": "tslint -c tslint.json 'packages/**/*.ts' --fix",
    "clean": "rimraf packages/**/dist",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@radar/tslint-config": "^5.0.0",
    "@ts-tools/node": "^0.7.4",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "bignumber.js": "^8.0.2",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "hex-to-uuid": "^1.0.1",
    "husky": "^1.2.0",
    "lerna": "^2.9.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "satoshi-bitcoin-ts": "^0.2.4",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "value-utils": "^0.1.0"
  },
  "workspaces": [
    "packages/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "yarn lint",
      "git add"
    ]
  }
}
